<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:background="#F5F5F5"

    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Trip Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E2FCE3"
            android:padding="16dp">

            <TextView
                android:id="@+id/trip_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chennai (Koyambedu) → Bengaluru (Bus Stop)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/trip_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11:00 PM - Mon, 18 Oct → 7:00 AM - Tue, 19 Oct"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/operator_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABC Travels - 1 Passenger"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Passenger Details -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passenger Details (Passenger 1)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp" />

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Label above the EditText -->
            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="51dp"
                android:layout_height="18dp"
                android:text="Name"
                android:gravity="center"
              android:layout_marginStart="15dp"
                android:background="@drawable/edittexttop_bg"
                android:textSize="16sp"
                android:textColor="#000000" />

            <!-- EditText field below the label -->
            <EditText
                android:id="@+id/passenger_name"
                android:layout_width="311dp"
                android:layout_height="44dp"
                android:hint="Enter your name"

                android:background="@drawable/custom_edittext_background"
                android:inputType="text" />
        </LinearLayout>


        <!-- Age and Gender -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Label above the EditText -->
                <TextView
                    android:id="@+id/age"
                    android:layout_width="51dp"
                    android:layout_height="18dp"
                    android:text="Age"
                    android:gravity="center"

                    android:background="@drawable/edittexttop_bg"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            <EditText
                android:id="@+id/passenger_age"
                android:layout_width="74dp"
                android:layout_height="44dp"
                android:background="@drawable/custom_edittext_background"
                android:hint="Age"
                android:inputType="number"

                android:padding="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"


                >

                <!-- Label above the EditText -->
                <TextView
                    android:id="@+id/gender"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:gravity="center"

                    android:layout_marginStart="20dp"
                    android:background="@drawable/edittexttop_bg"
                    android:textSize="16sp"
                    android:textColor="#000000" />
                <Spinner

                    android:id="@+id/passenger_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    android:entries="@array/gender_options" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Label above the EditText -->
            <TextView
                android:id="@+id/emailshow"
                android:layout_width="51dp"
                android:layout_height="18dp"
                android:text="Email"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:background="@drawable/edittexttop_bg"
                android:textSize="16sp"
                android:textColor="#000000" />

            <!-- EditText field below the label -->
            <EditText
                android:id="@+id/passenger_email"
                android:layout_width="311dp"
                android:layout_height="44dp"
                android:hint="Enter your Email"

                android:background="@drawable/custom_edittext_background"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Label above the EditText -->
            <TextView
                android:id="@+id/WhatsAppshow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="WhatsApp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/edittexttop_bg"
                android:textSize="16sp"
                android:textColor="#000000" />

            <!-- EditText field below the label -->
            <EditText
                android:id="@+id/passenger_whatsapp"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:hint="WhatsApp Number"
                android:inputType="phone"
                 android:background="@drawable/custom_edittext_background"
                android:padding="12dp" />
        </LinearLayout>
        <!-- WhatsApp Number -->


        <!-- Notification Checkbox -->
        <CheckBox
            android:padding="12dp"
            android:id="@+id/checkbox_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Notifications via WhatsApp"
            android:layout_marginTop="8dp" />

        <!-- Coupon Code -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Offers"
            android:textSize="16sp"

            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/coupon_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter Coupon Code"
                android:backgroundTint="#CCCCCC"
        />

            <Button
                android:id="@+id/apply_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Terms and Conditions -->
        <CheckBox
            android:id="@+id/checkbox_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I agree to all the Terms &amp; Conditions for Proceed Pay"
            android:layout_marginTop="16dp" />

        <!-- Proceed Button -->
        <Button
            android:id="@+id/proceed_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed Pay"

          android:background="@drawable/proceedtopay_bg"
            android:textColor="#FFFFFF"
            android:layout_marginTop="45dp" />
    </LinearLayout>
</ScrollView>
