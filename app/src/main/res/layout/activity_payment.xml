<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Trip Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2FCE3"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chennai (Koyambedu)  ➝  Bengaluru (Bus Stop)\nABC Travels\n1 Passenger"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Payment Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:elevation="4dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"



    >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Details"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ticket Amount: ₹450"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="GST Amount: ₹50"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Fare: ₹500"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="150% Refund on Bus Cancellation.\n Upto 100% Refund for Plan Changes \nDelays"
        android:textStyle="bold"
        android:textSize="12sp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                 android:gravity="end"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Fare"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                    android:layout_marginTop="16dp"
                    android:text="₹500"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹45 Offer"
                    android:layout_marginTop="16dp"
                    android:background="#DEFFE6"
                    android:textColor="#007B1D"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(including GST &amp;\n other Taxes)"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- Payment Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay via UPI"
                android:textStyle="bold"
                android:textSize="16sp" />

            <LinearLayout
                    android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/google_pay"

                    android:layout_marginLeft="12dp"
                    />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/phone_pay"
                    android:layout_marginLeft="12dp" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/paytm"
                    android:layout_marginLeft="12dp" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/razor_pay"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/upi_id_bg"
                android:drawableStart="@drawable/plus_symbol"
                android:hint="Enter New UPI ID"
                android:padding="10dp"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:elevation="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit/Debit/ATM Card"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/upi_id_bg"
            android:drawableStart="@drawable/plus_symbol"
            android:hint="Enter New UPI ID"
            android:padding="10dp"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Visa, Mastercard, Rupay, etc)"
            android:textSize="10sp"
            android:layout_marginTop="10dp" />

    </LinearLayout>
        <!-- Other Payment Options -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Net Banking"
            android:paddingStart="16dp"
            android:drawableEnd="@drawable/baseline_chevron_right_24"
            android:background="@drawable/upi_id_bg"
            android:paddingEnd="16dp"
            android:drawableStart="@drawable/bank_img"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wallets"
            android:paddingStart="16dp"
            android:drawableEnd="@drawable/baseline_chevron_right_24"
            android:background="@drawable/upi_id_bg"
            android:paddingEnd="16dp"
            android:drawableStart="@drawable/wallet"
            android:layout_marginTop="5dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Later &amp; Easy EMI"
            android:paddingStart="16dp"
            android:drawableEnd="@drawable/baseline_chevron_right_24"
            android:background="@drawable/upi_id_bg"
            android:paddingEnd="16dp"
            android:drawableStart="@drawable/pay_later_icon"
            android:layout_marginTop="5dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Assured Payment Label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               android:layout_gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/hundered_percentage_assurance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100% Assured Payment"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="5dp" />
            </LinearLayout>

            <!-- Payment Options -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
           android:layout_gravity="center"

                android:gravity="center"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:src="@drawable/visa_img" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:src="@drawable/mastercard"
                    android:layout_marginStart="5dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:src="@drawable/paytm"
                    android:layout_marginStart="5dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:src="@drawable/razor_pay"
                    android:layout_marginStart="5dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:src="@drawable/pay_payal"
                    android:layout_marginStart="5dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:src="@drawable/skrill"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
